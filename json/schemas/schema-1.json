{
	"@context": {
		"ex": "<http://example.org/whiskeyman/>",
		"foaf": "<http://xmlns.com/foaf/0.1/>",
		"whisky": "<https://vocab.org/whisky/terms/>",
		"dcat": "<http://www.w3.org/ns/dcat>",
		"xsd": "<http://www.w3.org/2001/XMLSchema#>",
		"schema": "<http://schema.org>",
		"rdfs": "<http://www.w3.org/2000/01/rdf-schema#>",
		"rdf": "<http://www.w3.org/1999/02/22-rdf-syntax-ns#>",
		"cerif": "<http://www.eurocris.org/ontologies/cerif/1.3>"
	},
	"$schema": "http://json-schema.org/draft-04/schema#",
	"$id": "https://example.com/BottleDescription.schema.json",
	"title": "Bottles",
	"description": "Bottle from the store",
	"uniqueItems": true,
	"type": "array",
	"minItems": 0,
	"definitions": {
		"BottleDescription": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string",
					"description": "Name of the described bottle"
				},
				"age": {
					"type": "number"
				},
				"voltage": {
					"type": "number",
					"minimum": 0,
					"desription": "Alcohol by volume present in bottle"
				},
				"DistilledAt": {
					"$ref": "#/definitions/Distillery"
				}
			}
		},
		"Distillery": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"founded": {
					"type": "number"
				},
				"RegionOf": {
					"type": "array",
					"minItems": 1,
					"items": {
						"$ref": "#/definitions/Region"
					}
				}
			}
		},
		"Region": {
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				}
			}
		},
		"Transaction": {
			"type": "object",
			"properties": {
				"ammountMl": {
					"type": "number",
					"minimum": 0
				},
				"price": {
					"type": "number"
				},
				"currency": {
					"type": "string"
				},
				"creationTime": {
					"type": "object",
					"format": "date-time"
				},
				"customerID": {
					"type": "number"
				}
			}
		},
		"SpecialPrice": {
			"type": "object",
			"properties": {
				"price": {
					"type": "number"
				},
				"currency": {
					"type": "string"
				},
				"customerID": {
					"type": "number"
				}
			}
		},
		"Ownership": {
			"type": "object",
			"properties": {
				"share": {
					"type": "number",
					"minimum": 0,
					"maximum": 100,
					"description": "percentage share of the bottle in question"
				},
				"customerID": {
					"type": "number"
				}
			}
		}
	},
	"items": {
		"type": "object",
		"title": "Bottle",
		"properties": {
			"bottleID": {
				"type": "number"
			},
			"shotPrice": {
				"type": "number"
			},
			"currency": {
				"type": "string"
			},
			"bottlePrice": {
				"type": "number"
			},
			"inStock": {
				"type": "boolean",
				"description": "Is bottle available for purchase"
			},
			"barcode": {
				"type": "number"
			},
			"purchaseDate": {
				"type": "object",
				"format": "date-time"
			},
			"Ownerships": {
				"type": "array",
				"minItems": 0,
				"items": {
					"$ref": "#/definitions/Ownership"
				}
			},
			"SpecialPrices": {
				"type": "array",
				"items": {
					"$ref": "#/definitions/SpecialPrice"
				}
			},
			"DescribedBy": {
				"$ref": "#/definitions/BottleDescription"
			},
			"Transactions": {
				"type": "array",
				"items": {
					"$ref": "#/definitions/Transaction"
				}
			}
		}
	}
}
